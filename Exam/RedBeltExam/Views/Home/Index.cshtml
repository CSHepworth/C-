@{Layout = null;}
<link rel="stylesheet" href="~/css/style.css">
@model User

<div class="loginRegisterMainDiv">
    <div class="loginRegisterMainDivLeft">
        <h1>Register</h1>
        <form method="post" asp-controller="Home" asp-action="RegisterUser" class="registerForm">
            <div class="inputDiv">
                <label asp-for="Username">Username:</label>
                <span asp-validation-for="Username"></span>
                <input type="text" asp-for="Username" class="input">
            </div>
            <div class="inputDiv">
                <label asp-for="Email">Email:</label>
                <span asp-validation-for="Email"></span>
                <input type="email" asp-for="Email" class="input">
            </div>
            <div class="inputDiv">
                <label asp-for="Password">Password:</label>
                <span asp-validation-for="Password"></span>
                <input type="password" asp-for="Password" class="input">
            </div>
            <div class="inputDiv">
                <label asp-for="Confirm">Confirm Password:</label>
                <span asp-validation-for="Confirm"></span>
                <input type="password" asp-for="Confirm" class="input">
            </div>
            <div class="submitDiv">
                <input type="submit" value="Register" class="submitButton">
            </div>
        </form>
    </div>
    <div class="loginRegisterMainDivLeft">
        <h1>Login</h1>
        <partial name="LoginUserPartial" />
        <h2>password</h2>
    </div>
</div>